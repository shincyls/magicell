<table id="timesheet-table" class="table table-sm table-responsive-lg mt-4" style="font-size:0.8rem">
    
    <thead class="text-dark">
      <tr>
        <th>Category</th>
        <th>Project</th>
        <th>Date</th>
        <th>Activity</th>
        <th>Time In-Out/Break</th>
        <th>Site Name</th>
        <th>Location</th>
        <% if current_user %>
        <th>Edit</th>
        <th>Delete</th>
        <% end %>
      </tr>
    </thead>

    <tbody class="text-dark" id="timesheet-row">
        <% unless @timesheets.nil? %>
        <% @timesheets.each do |t| %>
        <tr>
            <td><%=t.timesheet_category.name%></td>
            <td><%=t.project.name%></td>
            <td><%=t.date%>, <%=t.date.strftime("%A")%></td>
            <td><%=t.activity%></td>
            <td><%=t.time_in%>-<%=t.time_out%>/<%=t.time_break%></td>
            <td><%=t.site_name%></td>
            <td><%=t.location%></td>

            <% if current_user == t.employee.user %>
            <td><span class="bg-success rounded p-1 m-1"><%= link_to 'Edit', edit_timesheet_path(t), class: "small text-white", remote: true %></span></td>
            <td><span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', t, method: :delete, class: "small text-white", remote: true, data: { confirm: 'Press ok to confirm you submission.' } %></span></td>
            <% end %>
        </tr>
        <% end %>
        <% end %>
    </tbody>
    
</table>