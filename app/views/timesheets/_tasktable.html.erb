<table class="table table-sm table-responsive-lg mt-4" style="font-size:0.8rem">
    
    <thead class="text-dark">
      <tr>
        <th>Date</th>
        <th>Project</th>
        <th>Activity</th>
        <th style="width:5rem;">Time In/Out/Break</th>
        <th style="width:10rem;">Working Hours</th>
        <th>Site Name</th>
        <th>Location</th>
        <% if (@timesheet.submitted == false) %>
        <th>Action</th>
        <% end %>
      </tr>
    </thead>

    <tbody class="text-dark" id="timesheet-row">
        <% @tasks = @timesheet.timesheet_tasks %>
        <% unless @tasks.nil? %>
        <% @tasks.each do |t| %>
        <tr>
            <td><%=t.date%></td>
            <td><%=t.project.name%></td>
            <td><%=t.activity%></td>
            <td><%=t.time_in%>/<%=t.time_out%>/<%=t.time_break%></td>
            <td><%=t.total_hours%></td>
            <td><%=t.site_name%></td>
            <td><%=t.location%></td>
            <% if (@timesheet.submitted == false) %>
            <td>
                <span class="bg-success rounded p-1 m-1"><%= link_to 'Edit', edit_timesheet_task_path(t), class: "small text-white", remote: true %></span>
                <span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', t, method: :delete, class: "small text-white", remote: true, data: { confirm: 'Press ok to confirm you submission.' } %></span>
            </td>
            <% end %>
        </tr>
        <% end %>
        <% end %>

    </tbody>
    
</table>