<h4 class="text-left text-success">Step 2: Add Task for Timesheet <%= @timesheet.year %>-<%= @timesheet.month %></h4>

<% if @timesheet.submitted %>
    <h5 class="text-dark text-special">This timesheet has been submitted.</h5>
<% else %>
    <%= render partial: "timesheets/taskform", local: @task %>
<% end %>
    <br>
    <h4 class="text-left text-primary">Tasks List</h4>
    <div id="timesheet-task-table">
        <%= render partial: "timesheets/tasktable", local: @timesheet %>
    </div>