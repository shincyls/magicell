<table class="table table-sm table-responsive-lg mt-4" style="font-size:0.8rem">
    
    <thead class="text-dark">
      <tr>
        <th>Manager</th>
        <th>Approval</th>
        <th>Rejection</th>
        <th>Reject Reason</th>
        <th>Remark</th>
        <% if (current_user == @timesheet.employee.user) & (@timesheet.submitted == false) %>
        <th>Delete</th>
        <% end %>
      </tr>
    </thead>

    <tbody class="text-dark" id="timesheet-row">
        <% @approvals = @timesheet.timesheet_approvals %>
        <% unless @approvals.nil? %>
        <% @approvals.each do |a| %>
        <tr>
            <td><%=a.manager.full_name%></td>
            <td><%="Approved" if a.approval%></td>
            <td><%="Rejected" if a.reject%></td>
            <td><%=a.reject_reason%></td>
            <td><%=a.manager_remark%></td>
            <% if (current_user == @timesheet.employee.user) & (@timesheet.submitted == false) %>
            <td><span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', a, method: :delete, class: "small text-white", remote: true, data: { confirm: 'Please Confirm' } %></span></td>
            <% end %>
        </tr>
        <% end %>
        <% end %>
    </tbody>
    
</table>