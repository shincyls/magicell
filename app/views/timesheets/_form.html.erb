<main class="h-100" style="background-color:whitesmoke;">
    <div class="position-relative mb-4">
      <div class="container p-4 shadow rounded">
        <div class="row justify-content-center">
          <div class="col-lg-12">
              <%= form_for @application, remote: true do |f| %>

                <%= f.hidden_field :category, value: "Registered" %>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Full Name*</h6></div>
                    <div class="col-md-10"><%= f.text_field :full_name, placeholder: "Full Name", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Pax</h6></div>
                    <div class="col-md-10"><%= f.text_field :info_1, placeholder: "Department", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Lucky Draw</h6></div>
                    <div class="col-md-10"><%= f.text_field :info_2, placeholder: "Yes / No", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Table</h6></div>
                    <div class="col-md-10"><%= f.text_field :info_5, placeholder: "Table No.", class: "form-control" %></div>
                </div>

                <br>

                <div class="row justify-content-center">
                  <%= f.submit "Submit Registration", class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
                </div>

                <br><br>
        
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </main>
