<table id="leave-table" class="table table-sm table-responsive-lg" style="font-size:0.7rem">
  <h4 class="text-left text-success">Leave History</h4>
  <p>
  <span class="badge badge-secondary">Annual Leaves</span>
  <span class="badge badge-primary">Entitled: <%= current_user.employee.annual_leave_entitled %> Day(s)</span>
  <span class="badge badge-success">Taken: <%= current_user.employee.annual_leave_taken %> Day(s)</span>
  <span class="badge badge-info">Pending: <%= current_user.employee.annual_days(false) %> Day(s)</span>
  </p>
  <p>
  <span class="badge badge-secondary">Medical Leaves</span>
  <span class="badge badge-primary">Entitled: <%= current_user.employee.medical_leave_entitled %> Day(s)</span>
  <span class="badge badge-success">Taken: <%= current_user.employee.medical_leave_taken %> Day(s)</span>
  <span class="badge badge-info">Pending: <%= current_user.employee.medical_days(false) %> Day(s)</span>
  </p>

  <thead class="text-dark">
    <tr>
      <th>Leave</th>
      <th>Reason</th>
      <th>Contact</th>
      <th>Person</th>
      <th>From</th>
      <th>To</th>
      <th>Days</th>
      <th>Attachment</th>
      <th>Submitted</th>
      <th>Status</th>
      <% if current_user %>
      <th>Action</th>
      <% end %>
    </tr>
  </thead>

  <tbody class="text-dark">
      <% unless @leaveaps.nil? %>
      <% @leaveaps.each do |l| %>
        <tr id="lv-<%=l.id%>">
            <td><%=l.leavetype.name%></td>
            <td><%=l.reason%></td>
            <td><%=l.contact_person%></td>
            <td><%=l.contact_number%></td>
            <td><%=l.from_date%> <%=l.from_ampm%></td>
            <td><%=l.to_date%> <%=l.to_ampm%></td>
            <td><%=l.total_days%></td>
            <td><%= (link_to "Click", "http://#{l.url}", target: "_blank") if l.attachment_link.present? %></td>
            <td><%=(time_ago_in_words(l.submitted_at) + " ago") if l.submitted_at%></td>
            <td><span class="badge badge-<%=l.status_leave.css%>"><%=l.status_leave.name%></span></td>
            <% if current_user %>
            <td>
                <% if [1,3].include?(l.status_leave_id) %>
                <%= link_to 'Submit', submit_leaveap_path(l), class: "btn-sm btn-info m-1", method: 'post', remote: true %>
                <%= link_to 'Edit', edit_leaveap_path(l), class: "btn-sm btn-success m-1", remote: true %>
                <%= link_to 'Delete', l, method: :delete, class: "btn-sm btn-danger m-1", remote: true, data: { confirm: 'Press ok to confirm you submission.' } %>
                <% end %>
            </td>
            <% end %>
        </tr>
      <% end %>
      <% end %>
  </tbody>
</table>


<script>
loadjs('#leave-table', 5, 25, 'Blfrtip');
</script>