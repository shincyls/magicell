            <% l = @leaveap %>
            <td><%=l.leavetype.name%></td>
            <td><%=l.reason%></td>
            <td><%=l.contact_person%></td>
            <td><%=l.contact_number%></td>
            <td><%=l.from_date%> <%=l.from_ampm%></td>
            <td><%=l.to_date%> <%=l.to_ampm%></td>
            <td><%=l.total_days%></td>
            <td><%= (link_to "Click", "http://#{l.url}", target: "_blank") if l.attachment_link.present? %></td>
            <td><%=(time_ago_in_words(l.submitted_at) + " ago") if l.submitted_at%></td>
            <td><span class="badge badge-<%=l.status_leave.css%>"><%=l.status_leave.name%></span></td>
            <% if current_user %>
            <td>
                <% if [1,3].include?(l.status_leave_id) %>
                <%= link_to 'Submit', submit_leaveap_path(l), class: "btn-sm btn-info m-1", method: 'post', remote: true %>
                <%= link_to 'Edit', edit_leaveap_path(l), class: "btn-sm btn-success m-1", remote: true %>
                <%= link_to 'Delete', l, method: :delete, class: "btn-sm btn-danger m-1", remote: true, data: { confirm: 'Press ok to confirm you submission.' } %>
                <% end %>
            </td>
            <% end %>