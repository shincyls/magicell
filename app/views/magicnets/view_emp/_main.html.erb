<h4 class="text-success">Employee Info <span class="bg-success rounded p-1 m-1"><%= link_to 'Edit', editself_employee_path(current_user), class: "small text-white m-1", method: 'post', remote: true %></span></h4>
<table class="table table-sm table-responsive-lg mt-4" style="font-size:0.7rem;width:30rem;">
    <thead class="text-white bg-info">
      <tr>
        <th style="width;5rem">Info</th>
        <th style="width;5rem">Detail</th>
      </tr>
    </thead>
    <tbody class="text-dark">
        <tr>
            <td>Full Name</td>
            <td><%= @employee.full_name%></td>
        <tr>
        <tr>
            <td>IC/Passport</td>
            <td><%= @employee.identity_no%></td>
        <tr>
         <tr>
            <td>Personal Email</td>
