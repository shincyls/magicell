        <tr>
        <tr>
            <td>Company Email</td>
            <td><%= @employee.company_email%></td>
        <tr>
        <tr>
            <td>Address</td>
            <td><%= @employee.address%></td>
        <tr>
        <tr>
            <td>Birthday</td>
            <td><%= @employee.birthday %></td>
        <tr>
        <tr>
            <td>Nationality</td>
            <td><%= @employee.nationality%></td>
        <tr>
        <tr>
            <td>Race</td>
            <td><%= @employee.race%></td>
        <tr>
        <tr>
            <td>Gender</td>
            <td><%= @employee.gender%></td>
        <tr>
        <tr>
            <td>Marital Status</td>
            <td><%= @employee.marital_status%></td>
        <tr>
        <tr>
            <td>Spouse Name</td>
            <td><%= @employee.spouse_name%></td>
        <tr>
        <tr>
            <td>Children Count</td>
            <td><%= @employee.children_count%></td>
        <tr>
       
        <tr>
            <td>Phone Number</td>
            <td><%= @employee.phone_number%></td>
        <tr>
        <tr>
            <td>Phone Emergency</td>
            <td><%= @employee.phone_number_emergency%></td>
        <tr>
        <tr>
            <td>Contract </td>
            <td><%= @employee.contract_start %> <%= @employee.contract_end %></td>
        <tr>
    </tbody>
</table>

