<div class="row alert bg-primary alert-dismissible fade show" role="alert">
    <span class="alert-inner--icon"><i class="ni ni-bell-55"></i></span>
    <span class="alert-inner--text"><strong>Announcement!</strong> HR can post something and to be shown here!</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="row text-special pl-4 pr-4 pt-2 pb-2 bg-chrome rounded">
    <p class="text-white">Welcome Back! <span class="text-primary"><%=current_user.username%></span></p>
</div>

<div class="row text-dark text-special mt-4 mb-4 pl-4 pr-4 bg-glass rounded">

    <div class="mt-4 mb-4">
        <div class="dropdown">
            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                HR Department
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "Dashboard", "", class: "dropdown-item", remote: true %>
                <%= link_to "Employee", "", class: "dropdown-item", remote: true %>
                <%= link_to "Payroll", "", class: "dropdown-item", remote: true %>
                <%= link_to "Equipment", "", class: "dropdown-item", remote: true %>
                <%= link_to "Announcement", "", class: "dropdown-item", remote: true %>
            </div>
        </div>

        <div class="dropdown">
            <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Manager
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "Dashboard", "", class: "dropdown-item", remote: true %>
            </div>
        </div>

        <div class="dropdown">
            <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Employee
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "Dashboard", "", class: "dropdown-item disabled", remote: true %>
                <%= link_to "Leaves", leaveaps_path, class: "dropdown-item", remote: true %>
                <%= link_to "Timesheets", timesheets_path, class: "dropdown-item", remote: true %>
                <%= link_to "Expenses", leaveaps_path, class: "dropdown-item disabled", remote: true %>
                <%= link_to "Equipment", "", class: "dropdown-item disabled", remote: true %>
                <%= link_to "Payroll", "", class: "dropdown-item disabled", remote: true %>
            </div>
        </div>
    </div>

    <div class="justify-content-center w-100" id="main-dashboard" style="min-height:30rem;">
        <%= render partial: 'magicnets/mgrdpt' %>
        <%= render partial: 'magicnets/mgrproject' %>
        <%= render partial: 'magicnets/employee' %>
    </div>

</div>