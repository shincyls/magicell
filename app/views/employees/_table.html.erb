<% unless @employees.nil? %>
<% @employees.each do |e| %>
<tr>
    <td><%=e.full_name%></td>
    <td><%=e.employee_id%></td>
    <td><%=e.position%></td>
    <td><%=e.category%></td>
    <td><%=e.department.name%></td>
    <td><%=e.project.name%></td>
    <td><%=e.employement_status%></td>
    <td><%=e.joined_since%></td>

    <% if current_user.employee.Default? %>
    <td><span class="Details"></td>
    <td><span class="bg-success rounded p-1 m-1"><%= link_to 'Edit', edit_employee_path(e), class: "small text-white", target: "_blank" %></span></td>
    <td><span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', e, metrod: :delete, class: "small text-white", remote: true, data: { confirm: 'Press ok to confirm you submission.' } %></span></td>
    <% end %>

</tr>

<% end %>
<% end %>
