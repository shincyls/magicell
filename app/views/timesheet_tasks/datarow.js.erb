$('#flash-message').html("<%= j (render 'statics/message') %>");
<% if action_name == "create" %>
    $("#employee-result").html("<%= j (render 'reports/table_timesheet') %>");
    loadjs('#timesheet-details', 0, 25, 'Blfrtip');
<% elsif action_name == "destroy" %>
    $("#ts-<%=@timesheet_task.id%>").remove();
<% elsif ["submitall","approvepmall","approvefmall"].include?(action_name) %>
    <% unless @timesheet_tasks.nil? %>
    <% @timesheet_tasks.each do |t| %>
    <% @timesheet_task = t %>
    $("#ts-<%=t.id%>").html("<%= j (render 'datarow') %>");
    <% end %>
    <% end %>
<% elsif ["submit","update","approvepm","approvefm","rejectpm","rejectfm"].include?(action_name) %>
    $("#ts-<%=@timesheet_task.id%>").html("<%= j (render 'datarow') %>");
<% end %>
