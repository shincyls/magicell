<% t = @timesheet_task %>    
            <td><%=t.date%></td>
            <td><%=t.project.name%></td>
            <td><%=t.activity%></td>
            <td><%=t.working_hours%></td>
            <td><%=t.site_name%> <%=t.project.manager.id%> </td>
            <td><%=t.project_region%> <%=t.project_region.name if t.project_region %></td>
            <td><%=t.vehicle_number%> <%=t.vehicle_owner.name if t.vehicle_owner %></td>
            <td><%=(time_ago_in_words(t.submitted_at) + " ago") if t.submitted_at%></td>
            <td><span class="badge badge-<%=t.status_timesheet.css%>"><%=t.status_timesheet.name%></span></td>
            <td>
              <% if t.employee_id == current_user.employee.id %>
                <% if [1,3,5].include?(t.status_timesheet_id) %>
                <span class="bg-info rounded p-1 m-1"><%= link_to 'Submit', submit_timesheet_task_path(t), method: :post, class: "small text-white m-1", remote: true %></span>
                <span class="bg-success rounded p-1 m-1"><%= link_to 'Edit', edit_timesheet_task_path(t), class: "small text-white m-1", remote: true %></span>
                <span class="bg-danger rounded p-1 m-1"><%= link_to 'Delete', t, method: :delete, class: "small text-white m-1", remote: true, data: { confirm: 'Press ok to confirm you submission.' } %></span>
                <% end %>
              <% end %>
            </td>