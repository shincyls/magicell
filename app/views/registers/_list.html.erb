<% @registers.each do |r| %>
    <tr>
        <td><%= r.id %></td>
        <td><%= r.first_name %></td>
        <td><%= r.last_name %></td>
        <td><%= r.phone_number %></td>
        <td><%= r.email %></td>
        <td><%= r.field_1 %></td>
        <td><%= r.field_2 %></td>
        <td><%= r.field_3 %></td>
        <td><span class="badge badge-pill badge-success"><%= link_to 'Show', r %></span></td>
        <td><span class="badge badge-pill badge-info"><%= link_to 'Edit', edit_register_path(r) %></span></td>
        <td><span class="badge badge-pill badge-danger"><%= link_to 'Delete', r, method: :delete, data: { confirm: 'Press ok to confirm you submission.' } %></span></td>
    </tr>
<% end %>