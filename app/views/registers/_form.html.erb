<main class="h-100" style="background-color:whitesmoke;">
    <div class="position-relative mb-4">
      <div class="container p-4 shadow rounded">
        <div class="row justify-content-center">
          <div class="col-lg-12">
              <%= form_for @register, remote: true do |f| %>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>First Name</h6></div>
                    <div class="col-md-4"><%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %></div>
                    <div class="col-md-2"><h6>Last Name</h6></div>
                    <div class="col-md-4"><%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Phone Number</h6></div>
                    <div class="col-md-4"><%= f.text_field :phone_number, placeholder: "Phone Number", class: "form-control" %></div>
                    <div class="col-md-2"><h6>Email</h6></div>
                    <div class="col-md-4"><%= f.text_field :email, placeholder: "Email", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Field 1</h6></div>
                    <div class="col-md-10"><%= f.text_field :field_1, placeholder: "Field 1", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Field 2</h6></div>
                    <div class="col-md-10"><%= f.text_field :field_2, placeholder: "Field 2", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Field 3</h6></div>
                    <div class="col-md-10"><%= f.text_field :field_3, placeholder: "Field 3", class: "form-control" %></div>
                </div>

                <br>

                <div class="row justify-content-center">
                  <%= f.submit "Submit Registration", class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
                </div>

                <br>
        
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </main>
