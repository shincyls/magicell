<main class="h-100" style="background-color:whitesmoke;">
    <div class="position-relative mb-4">
      <div class="container p-4 shadow rounded">
        <div class="row justify-content-center">
          <div class="col-lg-12">
              <%= form_for @register, remote: true do |f| %>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>First Name*</h6></div>
                    <div class="col-md-4"><%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %></div>
                    <div class="col-md-2"><h6>Last Name*</h6></div>
                    <div class="col-md-4"><%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %></div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-2"><h6>Phone Number</h6></div>
                    <div class="col-md-4"><%= f.text_field :phone_number, placeholder: "Phone Number (Optional)", class: "form-control" %></div>
                    <div class="col-md-2"><h6>Email</h6></div>
                    <div class="col-md-4"><%= f.text_field :email, placeholder: "Email (Optional)", class: "form-control" %></div>
                </div>

                <br>

                <div class="row mt-2">
                    <div class="col-md-12"><h6>Entitled Number of Draw*</h6></div>
                    <div class="input-group mb-3 col-md-12">
                        <%= f.select(:drawing_chance, {"1" => 1, "3" => 3, "5" => 5}, {include_blank: "Select Here"}, class: "custom-select", id: "state") %>
                    </div>
                </div>

                <br>

                <div class="row justify-content-center">
                  <%= f.submit "Submit Registration", class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
                </div>

                <br><br>
        
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </main>
