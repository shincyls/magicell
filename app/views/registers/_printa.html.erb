<div class="modal-header bg-info" id="modal-header">
    <span class='text-white display-6'>Print Preview</span>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>

<div class="modal-body p-0" id="modal-body">
    <div id="print-section">
        <div class="row">
            <div class="col-12">
                <%= image_tag "brand/ogawa-#{@register.drawing_chance}.jpg", style: "width:100%;" %>
                <div class="top-right">
                    <p style="font-size:2rem;font-family:Righteous;"><%= @register.ticket_number %></p>
                </div>
            </div>
            <div class="bottom-left col-5">
                <p class="white-shadow-sm m-0" style="font-size:0.8rem;font-family:Righteous;"><%= @register.full_name.upcase %></p>
                <% if @register.identity_number != "0" %>
                <p class="white-shadow-sm m-0" style="font-size:0.8rem;font-family:Righteous;"><%= @register.identity_number %></p>
                <% end %>
                <p class="white-shadow-sm m-0" style="font-size:0.8rem;font-family:Righteous;"><%= @register.phone_number %></p>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer" id="modal-footer">
    <div class="row justify-content-center">
        <%= link_to "Click to Print", printupdate_register_path, class: "btn btn-primary m-2 mr-4", id: "printBtn", remote: true  %>
    </div>
</div>



