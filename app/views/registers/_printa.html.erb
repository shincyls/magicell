<div class="modal-header bg-info" id="modal-header">
    <span class='text-white display-6'>Print Preview</span>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
    </button>
</div>

<div class="modal-body p-0" id="modal-body">
    <div class="position-relative mt-4 mb-4">

      <div class="container p-4">
        <div class="row">
          <div class="col-lg-12 justify-content-center" id="print-section">
            <div style="border:2px dashed grey;margin:1rem">
                <h3 class="text-center"><%=@register.ticket_number%></h3>
                <p class="text-center">Name: <%=@register.first_name%> <%=@register.last_name%></p>
                <div class="mx-auto star color-<%= @register.drawing_chance %>">
                    <span class="pacifico text-white display-2"><%= @register.drawing_chance %><span>
                </div>
            </div>
          </div>
        </div>
      </div>

    </div>
</div>

<div class="modal-footer" id="modal-footer">
    <div class="row justify-content-center">
        <%= link_to "Click to Print", printupdate_register_path, class: "btn btn-primary m-2 mr-4", id: "printBtn", remote: true  %>
    </div>
</div>



