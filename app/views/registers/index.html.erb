<div class="row justify-content-center mt-4">
  <div class="col-lg-10 text-center" id="slogan">
    <h2 class="text-black">View and Search Registers</h2>
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="form-group ml-4 mr-4">
          <%= link_to "All", list_registers_path(category: 3), remote: true, id: "btn-all", class: "btn btn-primary" %>
          <%= link_to "Registered", list_registers_path(category: 1), remote: true, id: "btn-reg", class: "btn btn-outline-primary" %>
          <%= link_to "RSVP", list_registers_path(category: 2), remote: true, id: "btn-rsvp", class: "btn btn-outline-primary" %>
          <%= link_to "Walk-In", list_registers_path(category: 0), remote: true, id: "btn-walkin", class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
    <p class="text-black">(Search: Customer Name, Phone Number, IC Number, Print Status)</p>
  </div>
</div>

<main>
  <div class="position-relative mb-4" style="min-height:10rem;">
    <div class="container p-4 shadow rounded">
      <div class="row justify-content-center">
        <div class="col-lg-12">

          <table id="data-table" class="table table-sm table-responsive-lg table-striped" style="font-size:0.7rem">
            <thead class="bg-success text-white">
              <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Phone 1</th>
                <th>Phone 2</th>
                <th>IC Number</th>
                <th>Draws</th>
                <th>Attendance</th>
                <th>Status</th>
                <th>Show</th>
                <% if current_user.super? %>
                <th>Edit</th>
                <th>Delete</th>
                <% end %>
              </tr>
            </thead>

            <tbody id="search">
              <%= render partial: 'list' %>
            </tbody>
          </table>

          <br>

        </div>
      </div>
    </div>
  </div>
</main>

<script>

loadjs();

function loadjs() {
  $(document).ready(function() {
    $('#data-table').DataTable({
    "search": {
      "caseInsensitive": true
    }
  });
      
  } );
}

function printDiv(divName, regid) {
    var mywindow = window.open('/registers/' + regid);
    var printContents = document.getElementById(divName).innerHTML;
    mywindow.document.body.innerHTML = printContents;
    mywindow.print();
    return true;
}

</script>
