<div class="row justify-content-center mt-4 mb-4">
    <div class="col-lg-6">
        <div class="card text-special bg-secondary shadow border-0">
            <div class="card-header text-center bg-white">
                <h4 class="text-dark"><%= @greeting %> <%= @user.employee.full_name %></h4>
                <h6 class="text-primary">To reset your password, click the URL below:</h6>
                <p><%= edit_password_reset_url(@user.password_reset_token) %></p>
            </div>
            <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center text-muted mb-4">
                  <small>If you did not request your password to be reset, just ignore this e-mail and your password will stay the same.</small>
                </div>
            </div>
        </div>
    </div>
</div>

